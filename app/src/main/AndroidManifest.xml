<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="csu.liutao.ffmpegdemo">
    
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:glEsVersion="0x00030000" android:required="true"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ativities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ativities.SurfaceImgActivity" android:theme="@style/FullScreen"/>

        <activity android:name=".ativities.AudioRecordsActivity"/>

        <activity android:name=".ativities.PictureActivity" android:theme="@style/FullScreen"/>

        <activity android:name=".ativities.VideosActivity"/>

        <activity android:name=".ativities.MediasActivity"/>

        <activity android:name=".ativities.VideoRecordActivity" android:theme="@style/FullScreen"/>

        <activity android:name=".ativities.VideoPlayActivity" android:theme="@style/FullScreen"/>

        <activity android:name=".ativities.MediaRecordActivity" android:theme="@style/FullScreen"/>

        <activity android:name=".ativities.MediaPlayerActivity" android:theme="@style/FullScreen"/>

        <activity android:name=".opgls.activities.OpglBaseActivity" android:theme="@style/FullScreen"/>

        <activity android:name=".opgls.activities.OpglImageActivity" android:theme="@style/FullScreen"/>

        <activity android:name=".opgls.activities.OpglPictureActivity" android:theme="@style/FullScreen"/>

    </application>

</manifest>